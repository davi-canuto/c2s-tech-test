<% content_for :title, t("medias.index.title") %>

<div class="row mb-4">
  <div class="col">
    <h1 class="display-6"><i class="bi bi-envelope-fill"></i> <%= t("medias.index.title") %></h1>
    <p class="text-muted"><%= t("medias.index.subtitle") %></p>
  </div>
</div>

<div class="row mb-3">
  <div class="col">
    <%= search_form_for @q, url: medias_path, method: :get, html: { class: "card" } do |f| %>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-4">
            <%= f.label :filename_cont, t("medias.index.filters.filename"), class: "form-label" %>
            <%= f.search_field :filename_cont, class: "form-control", placeholder: t("medias.index.filters.filename") + "..." %>
          </div>
          <div class="col-md-4">
            <%= f.label :sender_cont, t("medias.index.filters.sender"), class: "form-label" %>
            <%= f.search_field :sender_cont, class: "form-control", placeholder: t("medias.index.filters.sender") + "..." %>
          </div>
          <div class="col-md-4">
            <%= f.label :subject_cont, t("medias.index.filters.subject"), class: "form-label" %>
            <%= f.search_field :subject_cont, class: "form-control", placeholder: t("medias.index.filters.subject") + "..." %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col">
            <%= f.submit t("common.search"), class: "btn btn-primary" %>
            <%= link_to t("common.clear"), medias_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">
    <% if @medias.any? %>
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th><%= t("medias.index.columns.filename") %></th>
                  <th><%= t("medias.index.columns.sender") %></th>
                  <th><%= t("medias.index.columns.subject") %></th>
                  <th><%= t("medias.index.columns.size") %></th>
                  <th><%= t("medias.index.columns.processing_logs") %></th>
                  <th><%= t("medias.index.columns.created") %></th>
                  <th><%= t("medias.index.columns.actions") %></th>
                </tr>
              </thead>
              <tbody>
                <% @medias.each do |media| %>
                  <tr>
                    <td>
                      <strong><%= link_to media.filename, media_path(media) %></strong>
                    </td>
                    <td>
                      <% if media.sender.present? %>
                        <%= media.sender %>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <% if media.subject.present? %>
                        <%= truncate(media.subject, length: 50) %>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td><%= number_to_human_size(media.file_size) %></td>
                    <td>
                      <span class="badge bg-secondary"><%= t("medias.index.logs_count", count: media.parser_records.count) %></span>
                    </td>
                    <td><%= t("common.time_ago", time: time_ago_in_words(media.created_at)) %></td>
                    <td>
                      <%= link_to media_path(media), class: "btn btn-sm btn-outline-primary" do %>
                        <i class="bi bi-eye"></i> <%= t("medias.index.view_button") %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer">
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% else %>
      <div class="card">
        <div class="card-body text-center py-5">
          <i class="bi bi-inbox display-1 text-muted"></i>
          <h3 class="mt-3"><%= t("medias.index.empty_state.title") %></h3>
          <p class="text-muted"><%= t("medias.index.empty_state.subtitle") %></p>
          <%= link_to new_email_path, class: "btn btn-primary mt-3" do %>
            <i class="bi bi-upload"></i> <%= t("medias.index.empty_state.upload_button") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

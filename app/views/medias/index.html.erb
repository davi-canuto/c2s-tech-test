<% content_for :title, "Email Files - Email Parser" %>

<div class="row mb-4">
  <div class="col">
    <h1 class="display-6"><i class="bi bi-envelope-fill"></i> Email Files</h1>
    <p class="text-muted">Manage and reprocess stored email files (.eml)</p>
  </div>
</div>

<div class="row mb-3">
  <div class="col">
    <%= search_form_for @q, url: medias_path, method: :get, html: { class: "card" } do |f| %>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-4">
            <%= f.label :filename_cont, "Filename", class: "form-label" %>
            <%= f.search_field :filename_cont, class: "form-control", placeholder: "Search by filename..." %>
          </div>
          <div class="col-md-4">
            <%= f.label :sender_cont, "Sender", class: "form-label" %>
            <%= f.search_field :sender_cont, class: "form-control", placeholder: "Search by sender..." %>
          </div>
          <div class="col-md-4">
            <%= f.label :subject_cont, "Subject", class: "form-label" %>
            <%= f.search_field :subject_cont, class: "form-control", placeholder: "Search by subject..." %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col">
            <%= f.submit "Search", class: "btn btn-primary" %>
            <%= link_to "Clear", medias_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">
    <% if @medias.any? %>
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Filename</th>
                  <th>Sender</th>
                  <th>Subject</th>
                  <th>Size</th>
                  <th>Processing Logs</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @medias.each do |media| %>
                  <tr>
                    <td>
                      <strong><%= link_to media.filename, media_path(media) %></strong>
                    </td>
                    <td>
                      <% if media.sender.present? %>
                        <%= media.sender %>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <% if media.subject.present? %>
                        <%= truncate(media.subject, length: 50) %>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td><%= number_to_human_size(media.file_size) %></td>
                    <td>
                      <span class="badge bg-secondary"><%= media.parser_records.count %> logs</span>
                    </td>
                    <td><%= time_ago_in_words(media.created_at) %> ago</td>
                    <td>
                      <%= link_to media_path(media), class: "btn btn-sm btn-outline-primary" do %>
                        <i class="bi bi-eye"></i> View
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer">
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% else %>
      <div class="card">
        <div class="card-body text-center py-5">
          <i class="bi bi-inbox display-1 text-muted"></i>
          <h3 class="mt-3">No email files found</h3>
          <p class="text-muted">Upload your first email to get started</p>
          <%= link_to new_email_path, class: "btn btn-primary mt-3" do %>
            <i class="bi bi-upload"></i> Upload Email
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

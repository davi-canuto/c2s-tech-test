<% content_for :title, t('.title') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h4 class="mb-0">
          <i class="bi bi-upload"></i>
          <%= t('.card_title') %>
        </h4>
      </div>
      <div class="card-body">
        <p class="text-muted"><%= t('.description') %></p>

        <%= form_with url: emails_path, method: :post, multipart: true, class: "mt-4" do |f| %>
          <div class="mb-3">
            <%= label_tag :email_file, t('.form.label'), class: "form-label" %>
            <%= file_field_tag :email_file, accept: ".eml", required: true, class: "form-control" %>
            <div class="form-text"><%= t('.form.help_text') %></div>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit t('.form.submit'), class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card mt-4">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="bi bi-info-circle"></i>
          <%= t('.how_it_works.title') %>
        </h5>
      </div>
      <div class="card-body">
        <ol>
          <li><%= t('.how_it_works.steps.upload').html_safe %></li>
          <li><%= t('.how_it_works.steps.processing').html_safe %></li>
          <li><%= t('.how_it_works.steps.extraction').html_safe %></li>
          <li><%= t('.how_it_works.steps.storage').html_safe %></li>
          <li><%= t('.how_it_works.steps.logs').html_safe %></li>
        </ol>

        <div class="alert alert-info mt-3" role="alert">
          <strong><%= t('.how_it_works.required_info.title') %></strong>
          <%= t('.how_it_works.required_info.message') %>
        </div>
      </div>
    </div>
  </div>
</div>

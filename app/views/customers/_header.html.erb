<div class="row mb-4">
  <div class="col">
    <h1 class="display-6">
      <i class="bi bi-people"></i>
      <%= t('.title') %>
    </h1>
    <p class="text-muted"><%= t('.subtitle') %></p>
  </div>
</div>

<div class="row mb-3">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= t('.total_count', count: pagy.count) %></h5>
          <%= link_to new_email_path, class: "btn btn-primary" do %>
            <i class="bi bi-upload"></i> <%= t('.upload_new') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

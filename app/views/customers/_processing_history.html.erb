<div class="card">
  <div class="card-header">
    <h5 class="mb-0">
      <i class="bi bi-file-text"></i>
      <%= t('.title') %>
    </h5>
  </div>
  <div class="card-body">
    <% if parser_records.any? %>
      <div class="list-group list-group-flush">
        <% parser_records.each do |record| %>
          <%= link_to parser_record_path(record), class: "list-group-item list-group-item-action p-2" do %>
            <div class="d-flex w-100 justify-content-between">
              <small><%= record.filename %></small>
              <% badge_class = record.status_success? ? 'bg-success' : 'bg-danger' %>
              <span class="badge <%= badge_class %>"><%= record.status %></span>
            </div>
            <small class="text-muted">
              <%= t('customers.common.time_ago', time: time_ago_in_words(record.created_at)) %>
            </small>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted small"><%= t('.no_records') %></p>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4 class="mb-0">
      <i class="bi bi-person-circle"></i>
      <%= t('.title') %>
    </h4>
  </div>
  <div class="card-body">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th style="width: 30%;"><%= t('customers.table.headers.name') %></th>
          <td><strong><%= customer.name %></strong></td>
        </tr>
        <tr>
          <th><%= t('customers.table.headers.email') %></th>
          <td>
            <% if customer.email.present? %>
              <i class="bi bi-envelope"></i> <%= customer.email %>
            <% else %>
              <span class="text-muted"><%= t('customers.common.not_provided') %></span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th><%= t('customers.table.headers.phone') %></th>
          <td>
            <% if customer.phone.present? %>
              <i class="bi bi-telephone"></i> <%= customer.phone %>
            <% else %>
              <span class="text-muted"><%= t('customers.common.not_provided') %></span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th><%= t('customers.table.headers.product_code') %></th>
          <td>
            <% if customer.product_code.present? %>
              <span class="badge bg-info"><%= customer.product_code %></span>
            <% else %>
              <span class="text-muted"><%= t('customers.common.not_provided') %></span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th><%= t('customers.table.headers.email_subject') %></th>
          <td>
            <% if customer.email_subject.present? %>
              <%= customer.email_subject %>
            <% else %>
              <span class="text-muted"><%= t('customers.common.not_provided') %></span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th><%= t('customers.table.headers.created_at') %></th>
          <td><%= l(customer.created_at, format: :long) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
